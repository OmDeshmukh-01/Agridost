<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@android:color/white"
    android:layout_marginBottom="16dp"
    android:padding="16dp"
    android:elevation="2dp">

    <!-- Post Image -->
    <ImageView
        android:id="@+id/item_post_image"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        android:background="@drawable/image_placeholder_background"
        android:visibility="gone" />

    <!-- Author Info -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="12dp"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_user_avatar"
            android:background="@drawable/circle_background" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="12dp">

            <TextView
                android:id="@+id/item_post_author_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sumit Chandra"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/item_post_author_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="India"
                    android:textColor="#666666"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" • "
                    android:textColor="#666666"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/item_post_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2 hours ago"
                    android:textColor="#666666"
                    android:textSize="12sp" />

            </LinearLayout>

        </LinearLayout>

        <!-- Crop Type Badge -->
        <TextView
            android:id="@+id/item_post_crop_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tomato"
            android:textColor="#2196F3"
            android:textSize="12sp"
            android:background="@drawable/crop_type_badge_background"
            android:padding="6dp"
            android:visibility="gone" />

    </LinearLayout>

    <!-- Post Content -->
    <TextView
        android:id="@+id/item_post_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="How to treat tomato blight?"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/item_post_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="My tomato plants are showing signs of blight. The leaves are turning yellow and brown spots are appearing. What should I do?"
        android:textColor="#333333"
        android:textSize="14sp"
        android:lineSpacingMultiplier="1.3" />

    <!-- Interaction Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/item_post_like_button"
            style="@style/Widget.Material3.Button.TextButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="👍"
            android:textSize="16sp"
            app:icon="@drawable/ic_thumb_up"
            app:iconSize="16dp" />

        <TextView
            android:id="@+id/item_post_like_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12"
            android:textColor="#666666"
            android:textSize="12sp"
            android:layout_marginStart="4dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/item_post_dislike_button"
            style="@style/Widget.Material3.Button.TextButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="👎"
            android:textSize="16sp"
            app:icon="@drawable/ic_thumb_down"
            app:iconSize="16dp" />

        <TextView
            android:id="@+id/item_post_dislike_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2"
            android:textColor="#666666"
            android:textSize="12sp"
            android:layout_marginStart="4dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/item_post_comment_button"
            style="@style/Widget.Material3.Button.TextButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="💬"
            android:textSize="16sp"
            app:icon="@drawable/ic_comment"
            app:iconSize="16dp" />

        <TextView
            android:id="@+id/item_post_comment_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5"
            android:textColor="#666666"
            android:textSize="12sp"
            android:layout_marginStart="4dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/item_post_share_button"
            style="@style/Widget.Material3.Button.TextButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="📤"
            android:textSize="16sp"
            app:icon="@drawable/ic_share"
            app:iconSize="16dp" />

    </LinearLayout>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Field Profit Estimator"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:gravity="center"
            android:layout_marginBottom="24dp" />

        <!-- Input Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <!-- Field Area -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Field Area (Hectares)"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#333333"
                    android:layout_marginBottom="8dp" />

                <EditText
                    android:id="@+id/etFieldArea"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:hint="Enter area in hectares"
                    android:inputType="numberDecimal"
                    android:background="@drawable/input_background"
                    android:padding="12dp"
                    android:layout_marginBottom="16dp" />

                <!-- Crop Type -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Crop Type"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#333333"
                    android:layout_marginBottom="8dp" />

                <Spinner
                    android:id="@+id/spinnerCropType"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@drawable/input_background"
                    android:layout_marginBottom="16dp" />

                <!-- Expected Yield -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Expected Yield (kg/hectare)"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#333333"
                    android:layout_marginBottom="8dp" />

                <EditText
                    android:id="@+id/etExpectedYield"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:hint="Expected yield per hectare"
                    android:inputType="numberDecimal"
                    android:background="@drawable/input_background"
                    android:padding="12dp"
                    android:layout_marginBottom="16dp" />

                <!-- Market Price -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Market Price (₹/kg)"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#333333"
                    android:layout_marginBottom="8dp" />

                <EditText
                    android:id="@+id/etMarketPrice"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:hint="Current market price per kg"
                    android:inputType="numberDecimal"
                    android:background="@drawable/input_background"
                    android:padding="12dp"
                    android:layout_marginBottom="16dp" />

                <!-- Costs Section -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="COSTS (₹)"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#1976D2"
                    android:layout_marginBottom="16dp" />

                <!-- Seed Cost -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Seed Cost"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#333333"
                    android:layout_marginBottom="8dp" />

                <EditText
                    android:id="@+id/etSeedCost"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:hint="Total seed cost"
                    android:inputType="numberDecimal"
                    android:background="@drawable/input_background"
                    android:padding="12dp"
                    android:layout_marginBottom="16dp" />

                <!-- Fertilizer Cost -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fertilizer Cost"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#333333"
                    android:layout_marginBottom="8dp" />

                <EditText
                    android:id="@+id/etFertilizerCost"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:hint="Total fertilizer cost"
                    android:inputType="numberDecimal"
                    android:background="@drawable/input_background"
                    android:padding="12dp"
                    android:layout_marginBottom="16dp" />

                <!-- Labor Cost -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Labor Cost"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#333333"
                    android:layout_marginBottom="8dp" />

                <EditText
                    android:id="@+id/etLaborCost"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:hint="Total labor cost"
                    android:inputType="numberDecimal"
                    android:background="@drawable/input_background"
                    android:padding="12dp"
                    android:layout_marginBottom="16dp" />

                <!-- Other Costs -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Other Costs (Pesticides, Irrigation, etc.)"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#333333"
                    android:layout_marginBottom="8dp" />

                <EditText
                    android:id="@+id/etOtherCosts"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:hint="Other miscellaneous costs"
                    android:inputType="numberDecimal"
                    android:background="@drawable/input_background"
                    android:padding="12dp"
                    android:layout_marginBottom="16dp" />

                <!-- Calculate Button -->
                <Button
                    android:id="@+id/btnCalculate"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:text="Calculate Profit"
                    android:textColor="@android:color/white"
                    android:background="@drawable/button_primary_background" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Result Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Profit Analysis"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#333333"
                    android:layout_marginBottom="12dp" />

                <TextView
                    android:id="@+id/tvResult"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="#666666"
                    android:lineSpacingMultiplier="1.2"
                    android:fontFamily="monospace" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

</ScrollView>
